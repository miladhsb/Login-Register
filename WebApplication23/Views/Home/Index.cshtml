

<div class="text-center">
    <h4 class="text-danger">فرم ورود و ثبت نام به صورت ایجکس</h4>
   
</div>


@section Scripts{



    <div class="modal" tabindex="-1" role="dialog" id="myModal">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">ورود / ثبت نام</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="d-flex justify-content-center mt-1">

                    <button class="btn btn-info mr-1"  onclick="ShowLoginModal()">ورود</button>
                    <button class="btn btn-success"  onclick="ShowRegisterModal()">ثبت نام</button>
                </div>
                <div class="modal-body" id="result">

                </div>

            </div>
        </div>
    </div>

    <script>



        function ShowLoginModal() {

            $('#myModal').modal('show')
                 $("#result").load("@Url.Action("LoginModal","Home")");

            }

          function ShowRegisterModal() {

            $('#myModal').modal('show')
                 $("#result").load("@Url.Action("RegisterModal", "Home")");

        }


    </script>

}